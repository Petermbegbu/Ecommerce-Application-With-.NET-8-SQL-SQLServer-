@model List<Category>;

<div class="mb-3">
    <div class="row">
        <div class="col-6">
            <h2>Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="category" asp-action="create" class="btn btn-primary">
                Create new Category
            </a>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Order</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach(var row in Model){
            <tr>
                <td>@row.Name</td>
                <td>@row.DisplayOrder</td>
            </tr>
        }
    </tbody>
</table>